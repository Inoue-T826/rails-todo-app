<% provide(:title, "Login") %>
<h1>ログイン</h1>

<%= form_with(url: login_path, scope: :session, local: true, class: "form-group") do |form| %>
  <div class="form-field">
    <%= form.label :email %>
    <%= form.email_field :email, class: "form-control", required: true %>
  </div>

  <div class="form-field">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", required: true %>
  </div>

  <%= form.submit "ログイン", class: "btn btn-primary" %>
<% end %>

<%= link_to "サインアップ", signup_path, class: "btn btn-success" %>
